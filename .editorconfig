# Top level .editorconfig file used for this project used everywhere
root = true

#### General Formatting Options ####

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# Text Files
[*.{txt,md}]
indent_style = tab

# NPM Package Files
[package*.json]
indent_style = space
indent_size = 2
