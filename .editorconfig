# Top level .editorconfig file used for this project used everywhere
root = true

#### General Formatting Options ####

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# Text Files
[*.{txt,md}]
indent_style = tab

# Unix-like Scripts
[*.{sh,bash,fish,zsh}]
end_of_line = lf

# Windows Scripts
[*.{bat,cmd,ps1}]
end_of_line = crlf

# JSON Files
[*.{json,jsonc,json5}]
indent_style = tab

# NPM Package Files
[package*.json]
indent_style = space
indent_size = 2

# Configuration Files
[*.{toml,xml,yaml,yml}]
indent_style = space
indent_size = 2
